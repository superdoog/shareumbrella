/* pages/register/register.wxss */
.inputView {
  background-color: white;
  line-height: 45px;
}

/*输入框*/
.nameImage, .keyImage {
  margin-left: 22px;
  width: 20px;
  height: 20px;
}

.loginLabel {
  margin: 15px 25px 15px 25px;
  color: gray;
  font-size: 15px;
}

.inputText {
  float: right;
  text-align: right;
  margin-right: 22px;
  margin-top: 2px;
  font-size: 15px;
}

.line {
  width: 100%;
  height: 1px;
  background-color: gainsboro;
  margin-top: 1px;
}

/*按钮*/
.loginBtn {
  width: 80%;
  margin-top: 35px;
  background-color: rgba(5, 210, 2500, 1);
  color: white;
}

.inputView input {
  font-size: -14rem;
  flex-grow: -6;
  border: 1px solid #0099CC;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 0.3rem;
  
  }

  .header {
    width: 100%;
    display: flex;
    flex-direction: column;
    padding-bottom: 15px;
    align-items: center;
    background: white;
  }
  .userinfo-avatar {
    border-radius: 128rpx;
    width: 128rpx;
    height: 128rpx;
    margin-block-start: 10px;
  
  }
  .userinfo-nickname {
    margin-top: 20rpx;
    font-size: 38rpx;
  }



  .inp {
    position: relative;
    width: 100%;
    height: 80rpx;
  }
  .radiogroup {
    display: flex;
    flex-direction: row;
  }
  .radiobox {
    display: flex;
    flex-direction: row;
    margin-left: 50rpx;
  }